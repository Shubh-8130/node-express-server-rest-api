pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the code from your repository
                checkout([$class: 'GitSCM', branches: [[name: '*/master']], userRemoteConfigs: [[url: 'https://github.com/Shubh-8130/node-express-server-rest-api.git']]])
            }
        }
        
        stage('Build and Deploy') {
            steps {
                // Navigate to the cloned repository directory
                sh 'ssh -i /Users/shubhamsharma/jenkins/my-key-terr.pem ubuntu@54.156.64.233'
                sh 'cd ~'
                
                // Update package lists and install Node.js and npm (for Ubuntu)
                sh ' touch jenkins.test'
                sh ' apt update -y'
                sh ' apt install nodejs npm -y'
                
                // Install dependencies
                sh 'npm install -y'
                
                // Update npm packages
                sh 'npm update -y'
                
                // Start the application
                sh 'npm start -y'
            }
        }
    }
}
